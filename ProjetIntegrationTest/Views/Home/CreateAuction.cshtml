@model ProjetIntegrationTest.ViewModels.AuctionInfoVM

@{
    ViewData["Title"] = "Create Auction";
}

<h2>Create Auction</h2>

<form asp-action="CreateAuction" method="post">
    <div class="form-group">
        <label asp-for="OpeningDate"></label>
        <input asp-for="OpeningDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="OpeningDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClosingDate"></label>
        <input asp-for="ClosingDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="ClosingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BiddingInterval"></label>
        <input asp-for="BiddingInterval" class="form-control" />
        <span asp-validation-for="BiddingInterval" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClosingInterval"></label>
        <input asp-for="ClosingInterval" class="form-control" />
        <span asp-validation-for="ClosingInterval" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeIncrementPerBet"></label>
        <input asp-for="TimeIncrementPerBet" class="form-control" />
        <span asp-validation-for="TimeIncrementPerBet" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Auction</button>
</form>
