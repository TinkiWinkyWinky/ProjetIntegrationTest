@model List<ProjetIntegrationTest.ViewModels.LotInfoVM>

@{
    ViewData["Title"] = "All Lots";
}

<h1>All Lots</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Artist Name</th>
            <th>Description</th>
            <th>Year of Creation</th>
            <th>Min Estimate</th>
            <th>Max Estimate</th>
            <th>Category</th>
            <th>Dimension</th>
            <th>Medium</th>
            <th>Filing Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lot in Model)
        {
            <tr>
                <td>@lot.Id</td>
                <td>@lot.ArtistName</td>
                <td>@lot.Description</td>
                <td>@lot.YearOfCreation</td>
                <td>@lot.MinEstimate</td>
                <td>@lot.MaxEstimate</td>
                <td>@lot.Category</td>
                <td>@lot.Dimension</td>
                <td>@lot.Medium</td>
                <td>@lot.FilingDate</td>
                <td>
                    <a href="@Url.Action("Details", "Lot", new { id = lot.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("EditLot", "Home", new { id = lot.Id })" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteLot" asp-controller="Home" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@lot.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
