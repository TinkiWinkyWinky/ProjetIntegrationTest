@model ProjetIntegrationTest.ViewModels.LotInfoVM

@{
    ViewData["Title"] = "Create Lot";
}

<h1>Create Lot</h1>

<form asp-action="CreateLot" method="post">
    <div class="form-group">
        <label asp-for="ArtistName" class="control-label"></label>
        <input asp-for="ArtistName" class="form-control" />
        <span asp-validation-for="ArtistName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YearOfCreation" class="control-label"></label>
        <input asp-for="YearOfCreation" class="form-control" />
        <span asp-validation-for="YearOfCreation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinEstimate" class="control-label"></label>
        <input asp-for="MinEstimate" class="form-control" />
        <span asp-validation-for="MinEstimate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxEstimate" class="control-label"></label>
        <input asp-for="MaxEstimate" class="form-control" />
        <span asp-validation-for="MaxEstimate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dimension" class="control-label"></label>
        <input asp-for="Dimension" class="form-control" />
        <span asp-validation-for="Dimension" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medium" class="control-label"></label>
        <input asp-for="Medium" class="form-control" />
        <span asp-validation-for="Medium" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FilingDate" class="control-label"></label>
        <input asp-for="FilingDate" class="form-control" />
        <span asp-validation-for="FilingDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>