@model IEnumerable<ProjetIntegrationTest.ViewModels.SellerInfoVM>

@{
    ViewData["Title"] = "List of Sellers";
}

<h1>List of Sellers</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>@seller.FirstName</td>
                <td>@seller.LastName</td>
                <td>@seller.PhoneNumber</td>
                <td>@seller.Email</td>
                <td>
                    <a href="@Url.Action("EditSeller", "Home", new { id = seller.Id })" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteSeller" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@seller.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
